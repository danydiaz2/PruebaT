<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/common_padding_min"
    android:layout_marginTop="@dimen/common_padding_min"
    app:cardCornerRadius="@dimen/common_padding_default"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:focusable="true">

        <ImageView
            android:id="@+id/imgCardView"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginHorizontal="@dimen/common_padding_min"
            android:layout_marginVertical="@dimen/common_padding_min"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_padding_min"
            android:layout_marginTop="@dimen/common_padding_min"
            android:gravity="start"
            android:textSize="15sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgCardView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Iphone 12 pro 256GB" />


        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_padding_min"
            android:layout_marginTop="@dimen/common_padding_default"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imgCardView"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="4.000.000" />

        <TextView
            android:id="@+id/tvCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_padding_min"
            android:layout_marginTop="@dimen/common_padding_min"
            app:layout_constraintStart_toEndOf="@+id/imgCardView"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice"
            tools:text="Nuevo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>